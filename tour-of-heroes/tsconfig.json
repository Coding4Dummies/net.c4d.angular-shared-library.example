{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2015",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "common-library": [
        "../common-library"
      ],
      "@angular/core": [
        "./node_modules/@angular/core"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "**/testing/*",
    "**/node_modules/*"
  ]
}